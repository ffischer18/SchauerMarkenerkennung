<UserControl x:Class="SchauerMarkenerkennung.MVVM.View.NeuerKundeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchauerMarkenerkennung.MVVM.View"
             xmlns:viewModel="clr-namespace:SchauerMarkenerkennung.MVVM.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label Foreground="White" Margin="98,20,601,392" Content="AdAdressNr"></Label>
        <TextBox TextAlignment="Center" Height="40px" Width="300px" Margin="98,55,402,355" Text="{Binding NewAdressNr, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Foreground="White" Margin="98,119,565,301" Content="AdFirmenBezeichnung"></Label>
        <TextBox TextAlignment="Center" Height="40px" Width="300px" Margin="98,149,402,261" Text="{Binding NewCompanyDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Foreground="White" Margin="98,223,601,189" Content="AdStrasse"></Label>
        <TextBox TextAlignment="Center" Height="40px" Width="300px" Margin="98,253,402,157" Text="{Binding NewStreet, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Foreground="White" Margin="98,331,601,81" Content="AdPostleitzahl"></Label>
        <TextBox TextAlignment="Center" Height="40px" Width="300px" Margin="98,361,402,49" Text="{Binding NewPLZ, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Foreground="White" Margin="432,20,267,392" Content="AdOrt"/>
        <TextBox TextAlignment="Center" Height="40px" Width="300px" Margin="432,55,68,355" Text="{Binding NewCity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Foreground="White" Margin="432,119,267,293" Content="AdLandName"/>
        <TextBox TextAlignment="Center" Height="40px" Width="300px" Margin="432,149,68,261" Text="{Binding NewCountry, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Foreground="White" Margin="432,228,240,184" Content="AdNationalitaetsKz"/>
        <TextBox TextAlignment="Center" Height="40px" Width="300px" Margin="432,253,68,157"/>

        <Button Height="30px" Margin="439,364,223,56" Command="{Binding AddCustomerCommand}" >Kunden hinzufügen</Button>
        <Label Foreground="White" Margin="594,362,78,50" Content="" RenderTransformOrigin="1.054,2.414"/>
    </Grid>
</UserControl>
